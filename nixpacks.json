{
  "phases": {
    "setup": {
      "nixPkgs": ["python313"]
    },
    "install": {
      "cmds": [
        "python -m venv /app/.venv",
        ". /app/.venv/bin/activate && pip install -r requirements.txt"
      ]
    },
    "build": {
      "cmds": [". /app/.venv/bin/activate && python manage.py collectstatic --no-input"]
    }
  },
  "start": {
    "cmd": ". /app/.venv/bin/activate && daphne -b 0.0.0.0 -p ${PORT:-8000} RuDjangoProject.asgi:application"
  }
}

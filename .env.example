# Local development environment variables
# Copy this file to .env and adjust values as needed

# Database (leave empty to use SQLite, or set to PostgreSQL URL)
# For PostgreSQL: postgresql://username:password@localhost:5432/database_name
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rudjango_dev

# Django settings
DEBUG=True
SECRET_KEY=django-insecure-local-dev-key-change-in-production

# Superuser (optional, for auto-creation)
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_EMAIL=admin@localhost
# DJANGO_SUPERUSER_PASSWORD=admin123

# VAPID Keys for Web Push Notifications (optional)
# VAPID_PRIVATE_KEY=-----BEGIN EC PRIVATE KEY-----...-----END EC PRIVATE KEY-----
# VAPID_PUBLIC_KEY_PEM=-----BEGIN PUBLIC KEY-----...-----END PUBLIC KEY-----
# VAPID_PUBLIC_KEY=your-base64-public-key-here
# VAPID_MAILTO=mailto:your-email@example.com

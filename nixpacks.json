{
  "phases": {
    "setup": {
      "nixPkgs": ["python313", "mariadb-connector-c", "pkg-config"]
    },
    "install": {
      "cmds": [
        "python -m venv /app/.venv",
        ". /app/.venv/bin/activate && pip install -r requirements.txt"
      ]
    },
    "build": {
      "cmds": [". /app/.venv/bin/activate && python manage.py collectstatic --no-input"]
    }
  },
  "start": {
    "cmd": ". /app/.venv/bin/activate && gunicorn --bind 0.0.0.0:${PORT:-8000} RuDjangoProject.wsgi:application"
  }
}
